#!/bin/sh

if ["$CC" -eq ""]; then
    CC=cc
fi

ccache --version

if [ $? -eq 0 ]; then

    CC="ccache $CC"
fi

m -rf "$PWD/installed_parrot"

make realclean
perl Configure.pl \
    --cc="$CC"    \
    --ccflags=-g  \
    $1            \
    --prefix="$PWD/installed_parrot" && \
nice -n20 make -j $TEST_JOBS && \
make install
