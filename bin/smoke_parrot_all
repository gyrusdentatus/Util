#!/bin/sh

# Update the repo we are hopefully in
git pull --rebase

for np in ~/bin/new_parrot*; do
    # First compile with gcc
    $np
    make smoke

    # Now with g++
    $np --cc=g++ --cxx=g++ --link=g++ --ld=g++
    make smoke
done

# This will be run in a loop, so we sleep to be nice
sleep 1800
