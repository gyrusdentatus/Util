#!/usr/bin/env perl
use strict;
use warnings;

my @configs = qw/
    .vimperatorrc
    .bashrc
    .bashrc.aliases
    .bash
    .gitconfig
    .vimrc
    .vim
    .perldb
    .irssi
    .screenrc
    .psqlrc
    .proverc
    .vimperatorrc
    .Xmodmap
    .dir_colors
/;
my $dir = shift || '/home/leto/git/util';
die "$dir does not exist!" unless -e $dir;

for my $config (@configs) {
    my $cmd = "ln -s $dir/config/$config";
    print "$cmd\n";
    system $cmd;
}
# crappy
echo "ln -s $dir/bin";
system "ln -s $dir/bin";
