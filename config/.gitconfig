[user]
    name = Duke Leto
    email = <jonathan@leto.net>
    editor = vim

[alias]
    ci = commit -a
    co = checkout
    st = status -a
    praise = blame
    up = !git stash && git pull origin master && git stash apply
    last  = cat-file commit HEAD
    v   = !git --version
    plog = !git log --pretty=format:'%C(yellow)%h%Creset %s %Cblue%d%Creset' --graph --all
    spread = !git push origin master && git push github master
    who   = shortlog -se --
    faster = repack -a -d -f --window=200 --window-memory=1g

[apply]
    whitespace = strip

[diff]
    rename = copy

[status]
    color = auto

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan 

[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = less -FXRS
    filemode = true
    logallrefupdates = true
    autocrlf = false
    whitespace = trailing-space,space-before-tab,cr-at-eol
    # enable if you are on NFS
    #preloadindex = true

