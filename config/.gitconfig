[user]
    name = Duke Leto
    email = <jonathan@leto.net>
    editor = vim

[alias]
    co     = checkout
    praise = blame
    up     = !git stash && git pull origin master && git stash pop
    last   = cat-file commit HEAD
    v      = !git --version
    plog   = log --pretty=format:'%C(yellow)%h%Creset %s %Cblue%d%Creset' --graph --all
    spread = push origin master && git push github master
    who    = shortlog -se --
    faster = repack -a -d -f --window=200 --window-memory=1g
    detach = checkout @{0}
    back   = checkout -

[log]
    date = local

[apply]
    whitespace = strip

[diff]
    rename = copy 

[status]
    color = auto

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan 

[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = less -FXRS
    filemode = true
    bare = false
    logallrefupdates = true
    autocrlf = false
    whitespace = trailing-space,space-before-tab,cr-at-eol
    preloadindex = true

